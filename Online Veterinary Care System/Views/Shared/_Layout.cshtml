    <script>
        $(document).ready(function () {
            if (isLoggedIn()) {
                $('#gotoAccount').show();
                $('#logout').show();
                $('#login').hide();
            } else {
                $('#gotoAccount').hide();
                $('#logout').hide();
                $('#login').show();
            }
        });

        function gotoAccount() {
            var role = JSON.parse(localStorage.getItem('token')).role;
            if (role == 'Admin') {
                window.location = '/admin';
            } else if (role == 'Doctor') {
                window.location = '/doctor';
            } else if (role == 'User') {
                window.location = '/user';
            }
        }

        function logout() {
            localStorage.removeItem('token');
            window.location = '/login';
        }

    </script>


