
@{
    ViewBag.Title = "Doctor Registration";
}

<section class="clearfix" style="margin-top: 200px; margin-bottom: 50px">
    <div class="container d-flex justify-content-center">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h2>Register as a Doctor</h2>
                    </div>
                    <div class="card-body" id="footer" style="padding:10px">
                        <form class="php-email-form" onsubmit="doRegister()">
                            <div class="form-group">
                                <input id="name" placeholder="Name" type="text"
                                       class="form-control"
                                       required />
                            </div>
                            <div class="form-group">
                                <input id="email" placeholder="Email" type="email"
                                       class="form-control"
                                       required />
                            </div>
                            <div class="form-group">
                                <input id="mobile" placeholder="Mobile" type="number"
                                       class="form-control"
                                       required />
                            </div>
                            <div class="form-group">
                                <textarea id="address" placeholder="Address"
                                          class="form-control"
                                          required></textarea>
                            </div>
                            <div class="form-group">
                                <input id="passwordRegister" placeholder="Password" type="password" class="form-control"
                                       required />
                            </div>
                            <div class="form-group">
                                <input id="confirmPassword" placeholder="Confirm Password" type="password" class="form-control"
                                       required />
                            </div>
                            <div class="text-center"><button type="submit" title="Register">Register</button></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    function doRegister() {

        if ($('#passwordRegister').val() != $('#confirmPassword').val()) {
            alert('Passwords do not match.');
            return;
        }

        if ($('#mobile').val().length > 10) {
            alert('Only 10 digits allowed in Mobile Number.');
            $('#mobile').focus();
            return;
        }

        var userObj = {};
        userObj.name = $('#name').val();
        userObj.email = $('#email').val();
        userObj.mobile = $('#mobile').val();
        userObj.address = $('#address').val();
        userObj.password = $('#passwordRegister').val();
        userObj.isActive = false;
        userObj.role = "Doctor";


        $.ajax({
            url: '/api/User/Post',
            data: JSON.stringify(userObj),
            method: 'POST',
            dataType: 'json',
            contentType: "application/json; charset=utf-8",
            beforeSend: function () {
                $('#loading').show();
            },
            complete: function () {
                $('#loading').hide();
            },
            success: function (res) {
                if (res.added) {
                    alert('Registration done successfully. Your Profile will be reviewed by Admin and once approved, you can login to your account.');
                } else {
                    alert(res.message);
                }
            },
            error: function (err) {
                console.log('Error: ', err);
                alert(err);
            }
        });
    }
</script>

