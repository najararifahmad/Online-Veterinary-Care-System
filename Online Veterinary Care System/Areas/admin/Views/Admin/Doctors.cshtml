@model IEnumerable<DAL.Models.User>
@{
    ViewBag.Title = "Doctors";
}

<style>
    th{
        border: 1px solid black;
    }
</style>

<section class="dashboard-counts section-padding">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h2>Registered Doctors</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table class="table table-hover table-responsive">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Mobile</th>
                            <th>Address</th>
                            <th>Registered Date</th>
                            <th>Identity Card</th>
                            <th>Aadhar Card</th>
                            <th>#</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var m in Model)
                        {
                        <tr>
                            <td>@m.Name</td>
                            <td>@m.Email</td>
                            <td>@m.Mobile</td>
                            <td>@m.Address</td>
                            <td>@m.AddedOn</td>
                            <td>
                                <a href="javascript:void(0)" onclick="showDocument('@m.IdentityCardImagePath', 'Identity Card')">
                                    <img src="@m.IdentityCardImagePath" height="100" />
                                </a>
                            </td>
                            <td>
                                <a href="javascript:void(0)" onclick="showDocument('@m.AadharCardImagePath', 'Aadhar Card')">
                                    <img src="@m.AadharCardImagePath" height="100" />
                                </a>
                            </td>
                            @if (m.IsActive == false)
                            {
                                <td><a href="javascript:void(0)" onclick="approveDoctor('@m.Mobile')">Approve</a></td>
                            }
                            else
                            {
                                <td><a href="javascript:void(0)" onclick="rejectDoctor('@m.Mobile')">Reject</a></td>
                            }
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<div id="documentModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="documentTitle"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="overflow-x: scroll; overflow-y: scroll">
                <img id="documentImage"/>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<script>
    function approveDoctor(mobile) {

        $.ajax({
            url: '/api/User/ApproveDoctor?mobile=' + mobile,
            method: 'POST',
            beforeSend: function () {
                $('#loading').show();
            },
            complete: function () {
                $('#loading').hide();
            },
            success: function (res) {
                if (res.added) {
                    alert(res.message);
                    location.reload();
                } else {
                    alert(res.message);
                }
            },
            error: function (err) {
                console.log('Error: ', err);
                alert(err);
            }
        });
    }

    function rejectDoctor(mobile) {
        $.ajax({
            url: '/api/User/RejectDoctor?mobile=' + mobile,
            method: 'POST',
            beforeSend: function () {
                $('#loading').show();
            },
            complete: function () {
                $('#loading').hide();
            },
            success: function (res) {
                if (res.added) {
                    alert(res.message);
                    location.reload();
                } else {
                    alert(res.message);
                }
            },
            error: function (err) {
                console.log('Error: ', err);
                alert(err);
            }
        });
    }

    function showDocument(imagePath, documentTitle) {
        $('#documentTitle').text(documentTitle);
        $('#documentImage').attr('src', imagePath);
        $('#documentModal').modal('show');
    }
</script>
