@model IEnumerable<DAL.Models.InformationDissemination>
@{
    ViewBag.Title = "Information Dissemination";
}

<section class="dashboard-counts section-padding">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h2>Information Dissemination</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <a href="/admin/AddInformationDissemination">Add New Information Dissemination</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table class="table table-hover table-responsive">
                    <thead>
                        <tr>
                            <th>Information Text</th>
                            <th>File</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var m in Model)
                        {
                            <tr>
                                <td>
                                    @m.InformationText
                                </td>
                                <td>
                                    <a href="@m.FilePath" target="_blank">
                                        Download
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
